---
import Layout from '../layouts/Layout.astro';
import DogList from '../components/DogList.svelte';
import "../styles/global.css";
---

<Layout title="Tailspin Shelter - Find Your Forever Friend">
  <div class="py-8">
    <div class="max-w-3xl mb-10 bg-teal-700/30 backdrop-blur-sm p-8 rounded-2xl border border-teal-500/20">
      <h1 class="text-4xl font-bold mb-4 text-white">Welcome to Tailspin Shelter</h1>
      <p class="text-xl text-teal-50">Find your perfect companion from our wonderful selection of dogs looking for their forever homes.</p>
    </div>
    
    <DogList client:only="svelte" />
  </div>
</Layout>
