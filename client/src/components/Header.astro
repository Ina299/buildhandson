<header class="bg-teal-600/80 backdrop-blur-sm border-b border-teal-500/20 text-white p-4 shadow-lg transition-colors duration-300">
  <div class="container mx-auto flex justify-between items-center pl-4 pr-4">
    <div class="flex items-center">
      <div class="relative group">
        <button id="menu-toggle" class="focus:outline-none mr-4">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
        <nav id="menu" class="hidden absolute left-0 mt-2 w-48 bg-teal-700/95 backdrop-blur-sm text-white rounded-lg shadow-lg z-10 transition-all duration-300 border border-teal-600/30">
          <ul class="py-1">
            <li><a href="/" class="block px-4 py-2 hover:bg-teal-600/50">Home</a></li>
            <li><a href="/about" class="block px-4 py-2 hover:bg-teal-600/50">About</a></li>
          </ul>
        </nav>
      </div>
      <h1 class="text-xl font-bold"><a href="/" class="hover:text-cyan-200 transition-colors duration-300">Tailspin Shelter</a></h1>
    </div>
  </div>
</header>

<script>
  // Toggle menu visibility when hamburger is clicked
  const menuToggle = document.getElementById('menu-toggle');
  const menu = document.getElementById('menu');
  
  if (menuToggle && menu) {
    menuToggle.addEventListener('click', () => {
      menu.classList.toggle('hidden');
    });
    
    // Close menu when clicking outside
    document.addEventListener('click', (event) => {
      const isClickInside = menuToggle.contains(event.target as Node) || menu.contains(event.target as Node);
      if (!isClickInside && !menu.classList.contains('hidden')) {
        menu.classList.add('hidden');
      }
    });
  }
</script>